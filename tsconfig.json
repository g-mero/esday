{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["src/*"],
      "esday": ["src/index"]
    },
    "declaration": true,
    "declarationDir": "dist/types",
    "types": ["node"],
    "strict": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": true
  },
  "exclude": ["dist"]
}
